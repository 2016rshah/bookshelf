<div class="index">
  <div class="row">
    <div class = "columns small-12">
      <h1>Welcome to your bookshelf</h1>
    </div>
  </div>
  <div class = "row">
    <div class="twelve columns">
    <% @books.each_slice(3) do |books| %>
      <div class = "row">
        <% books.each do |book| %>
          <div class = "book four columns">
            <img src="http://covers.openlibrary.org/b/isbn/<%= book.isbn %>-L.jpg" />
            <p>
              <ul class='links'>
                <li><%= link_to 'Show', book %></li>
                <li><%= link_to 'Edit', edit_book_path(book) %></li>
                <li><%= link_to 'Destroy', book, method: :delete, data: {confirm: 'You sure?'} %></li>
              </ul>
            </p>
          </div>
        <% end %>
      </div>
    <% end %>
    </div>
  </div>
  <div class="row">
    <div class="new-book twelve columns">
      <%= link_to 'New book', new_book_path %>
    </div>
  </div>
</div>