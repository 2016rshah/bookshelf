<div class="ta-center">
	<h3>
	  <strong>Title:</strong>
	  <%= @book.title %>
	</h3>

	<p>
	  <strong>Author:</strong>
	  <%= @book.author %>
	</p>

	<p>
		<strong>ISBN:</strong>
		<%= @book.isbn %>
	</p>

	<p>
		<strong>Owner:</strong>
		<%= link_to @book.user.email, @book.user %>
	</p>

	<p>
		<img src="http://covers.openlibrary.org/b/isbn/<%= @book.isbn %>-L.jpg" />
	</p>

	<%= link_to 'Edit', edit_book_path(@book) %> |
	<%= link_to 'Back', @book.user %>
</div>